// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums para roles y estados
enum Role {
  ADMIN
  RESEARCHER
}

enum OrderStatus {
  PENDING   // Creada, esperando pago
  PAID      // Pagada exitosamente
  SHIPPED   // Enviada / Despachada
  DELIVERED // Entregada
  CANCELLED // Cancelada
}

// MODELO DE USUARIO (Opcional para compras, pero útil para Admin)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(RESEARCHER)
  
  // Relación: Un usuario puede tener muchas órdenes (o ninguna)
  orders    Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MODELO DE PRODUCTO
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  category    String
  images      String   // URL de la imagen principal
  
  // Campos científicos específicos de tu nicho
  purity      String?  // Ej: "99.8% HPLC"
  sequence    String?  // Ej: "Gly-Hys-Lys..."
  benefits    String?  @db.Text 
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relación: Un producto está en muchos items de orden
  orderItems  OrderItem[]
}

// MODELO DE ORDEN (Optimizado para Guest Checkout y Logística)
model Order {
  id              String      @id @default(uuid())
  
  // 1. Relación con Usuario (OPCIONAL para permitir compra como invitado)
  userId          Int?        
  user            User?       @relation(fields: [userId], references: [id])
  
  // 2. Datos del Comprador (Se guardan en cada orden por seguridad)
  customerName    String      // Vital para el envío
  customerEmail   String      // Vital para notificaciones
  customerPhone   String      // Vital para la transportadora
  
  // 3. Dirección de Envío Estructurada
  addressLine1    String      // Calle / Carrera #...
  addressLine2    String?     // Apto, Bloque, Unidad (Opcional)
  city            String      // Ej: Manizales
  state           String?     // Departamento / Estado
  postalCode      String?     // Código Postal
  country         String      @default("Colombia")
  
  // 4. Información Financiera
  total           Decimal     @db.Decimal(10, 2)
  status          OrderStatus @default(PENDING)
  isPaid          Boolean     @default(false)
  paidAt          DateTime?
  stripePaymentId String?     // ID de transacción de Stripe
  
  // 5. Logística Interna (Para uso del Admin)
  trackingNumber  String?     // Número de guía (Servientrega/FedEx)
  courier         String?     // Nombre de la transportadora
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relación con los productos comprados
  items           OrderItem[]
}

// MODELO DE ITEM DE ORDEN (Snapshot del precio al momento de compra)
model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Precio congelado al momento de la compra
}