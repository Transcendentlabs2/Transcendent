// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum para manejar roles (útil para tu panel administrativo)
enum Role {
  ADMIN
  RESEARCHER
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Aquí guardaremos la contraseña encriptada
  name      String?
  role      Role     @default(RESEARCHER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique // Para la URL: /product/nombre-producto
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  category    String
  images      String   // URL de Cloudinary (podemos usar JSON si son varias, por ahora String simple)
  
  // Campos para la Landing Page / Ciencia
  purity      String?  // Ej: "99.8% HPLC"
  sequence    String?  // Ej: "Gly-Hys-Lys..."
  benefits    String?  @db.Text // Lista de beneficios separados por comas
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}